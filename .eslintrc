{
    "extends": [
        "airbnb"
    ],

    "parser": "babel-eslint",

    "rules": {
        "comma-dangle": [ "error", "never" ],
        "import/no-named-as-default": [ "off" ],
        "indent": [ "error", 4 ],
        "linebreak-style": [ "error", "unix" ],
        "no-else-return": [ "off" ],
        "no-unused-vars": [ "error", {
            "args": "after-used",
            "varsIgnorePattern": "^_"
        } ],
        "quotes": [ "error", "single" ],
        "quote-props": [ "error", "consistent-as-needed" ],
        "react/jsx-indent": [ "error", 4 ],
        "react/jsx-indent-props": [ "error", 4 ],
        "semi": [ "error", "always" ]
    }
}